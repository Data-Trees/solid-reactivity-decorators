{
  "name": "@spacio/solid-reactivity-decorators",
  "author": "Spacio",
  "version": "1.0.0",
  "access": "public",
  "description": "A collection of decorators to make your classes reactive, using SolidJS",
  "main": "src/main.ts",
  "exports": {
    ".": {
      "types": "./build/main.d.ts",
      "require": "./build/solid-reactivity-decorators.umd.js",
      "import": "./build/solid-reactivity-decorators.mjs"
    }
  },
  "module": "build/solid-reactivity-decorators.mjs",
  "types": "build/main.d.ts",
  "files": [
    "build"
  ],
  "keywords": [
    "solid",
    "solidjs",
    "reactivity",
    "decorators",
    "reactive"
  ],
  "license": "MIT",
  "scripts": {
    "build": "vite build",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx}\"",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "test": "vitest",
    "tsc": "tsc --noEmit"
  },
  "dependencies": {
    "@solid-primitives/memo": "^1.4.1",
    "vite": "^6.2.3",
    "vite-plugin-dts": "^4.5.3",
    "vite-plugin-solid": "^2.11.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@types/node": "^22.13.13",
    "@types/react": "^19.0.12",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.0.0",
    "jsdom": "^26.0.0",
    "prettier": "3.5.3",
    "solid-js": "^1.9.5",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.28.0",
    "vitest": "^3.0.9"
  },
  "peerDependencies": {
    "solid-js": "1.x"
  }
}
